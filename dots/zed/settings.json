// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    // Appearance
    "icon_theme": {
        "mode": "dark",
        "light": "Zed (Default)",
        "dark": "Catppuccin Frapp√©"
    },
    "theme": {
        "mode": "dark",
        "light": "One Light",
        "dark": "Zedokai Darker (Filter Machine)"
    },
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "buffer_font_family": "UbuntuMono Nerd Font Mono",

    // Editor
    "vim_mode": true,
    "helix_mode": true,
    "tab_size": 4,

    // Keymap
    "base_keymap": "VSCode",

    // Agent
    "agent": {
        "inline_assistant_model": {
            "provider": "deepseek",
            "model": "deepseek-reasoner"
        },
        "model_parameters": []
    },

    // Language overwrites
    "languages": {
        // Markdown
        "Markdown": {
            "format_on_save": "on"
        }
    }
}

# else
#     export EDITOR='vim'
# fi
if command_exists hx; then
    export EDITOR="hx"
elif command_exists vim; then
    export EDITOR="vim"
else
    export EDITOR="vi"
fi

if [[ ${OSTYPE} == darwin* ]]; then
    if command_exists vim; then
        export ZVM_VI_EDITOR="vim"
    else
        export ZVM_VI_EDITOR="vi"
    fi
fi

